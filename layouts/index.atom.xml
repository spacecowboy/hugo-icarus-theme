{{ `<?xml version='1.0' encoding='UTF-8'?>` | safeHTML }}
<feed xmlns="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/">
  <id>{{ .Permalink }}</id>
  <title>{{ with .Title }}{{.}} on {{ end }}{{ .Site.Title }}</title>{{ if not .Date.IsZero }}
  <updated>{{ .Date.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</updated>{{ end }}
  <author>{{ with .Site.Params.author }}
    <name>{{ . | safeHTML }}</name>{{ end }}{{ with .Site.Params.author_email }}
    <email>{{.}}</email>{{ end }}
  </author>
  {{ with  .OutputFormats.Get "atom" -}}
  <link rel="self" type="application/atom+xml" href="{{ .Permalink }}" />
  {{- end }}
  {{ range .AlternativeOutputFormats -}}
  <link rel="alternate" type="{{ .MediaType.Type }}" href="{{ .Permalink | safeURL }}" />
  {{ end -}}
  <generator>Hugo -- gohugo.io</generator>
  <subtitle>Recent content {{ with .Title }}in {{.}} {{ end }}on {{ .Site.Title }}</subtitle>
  {{ with $.Site.Params.logo }}<icon>{{ . | absURL }}</icon>{{end}}
  {{ with .Site.Copyright }}<rights>{{.}}</rights>{{end}}

  {{ range first 15 .Data.Pages }}
  <entry>
    <id>{{ .Permalink }}</id>
    <link href="{{ .Permalink }}" rel="alternate" />
    <title>{{ .Title }}</title>
    <updated>{{ .Date.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</updated>
    <author>{{ with .Site.Params.author }}
      <name>{{ . | safeHTML }}</name>{{ end }}{{ with .Site.Params.author_email }}
      <email>{{.}}</email>{{ end }}
    </author>
    {{ with .Params.banner }}
    <media:thumbnail url="{{. | absURL }}" />
    {{end}}
    {{ `<summary type="html"><![CDATA[` | safeHTML }}{{ .Summary | safeHTML  }}]]></summary>
    {{ `<content type="html"><![CDATA[` | safeHTML }}{{ .Content | safeHTML }}]]></content>
  </entry>
  {{ end }}
</feed>
